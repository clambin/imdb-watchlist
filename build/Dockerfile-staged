FROM --platform=${BUILDPLATFORM:-linux/amd64} golang:1.22 as builder

ARG TARGETPLATFORM
ARG BUILDPLATFORM
ARG TARGETOS
ARG TARGETARCH
ARG VERSION
ENV VERSION=$VERSION
ARG TARGET_BINARY

WORKDIR /app/
ADD . .
RUN CGO_ENABLED=0 GOOS=${TARGETOS} GOARCH=${TARGETARCH} \
    go build \
    -ldflags="-X main.version=$VERSION" \
    -o imdb-watchlist \
    cmd/${TARGET_BINARY}/${TARGET_BINARY}.go


FROM alpine

ARG TARGET_BINARY

WORKDIR /app
COPY --from=builder /app/${TARGET_BINARY} /app/${TARGET_BINARY}

RUN /usr/sbin/addgroup app
RUN /usr/sbin/adduser app -G app -D
USER app

ENTRYPOINT ["/app/imdb-watchlist"]
CMD []
